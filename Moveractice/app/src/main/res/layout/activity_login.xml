<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/bg_back">

    <EditText
        android:id="@+id/email_edittext_register2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_register_login"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_edittext_register" />

    <EditText
        android:id="@+id/password_edittext_register2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_register_login"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_register2"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_register2"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_register2" />

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="login"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_register2"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_register2"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_register2" />

    <TextView
        android:id="@+id/back_to_registeration_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Back to registeration"
        app:layout_constraintEnd_toEndOf="@+id/login_button_register"
        app:layout_constraintStart_toStartOf="@+id/login_button_register"
        app:layout_constraintTop_toBottomOf="@+id/login_button_register" />
</androidx.constraintlayout.widget.ConstraintLayout>